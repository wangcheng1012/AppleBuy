<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <include layout="@layout/part_order_userinfo" />

    <include layout="@layout/line" />

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/white_F1F1F1" />

    <include layout="@layout/line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/textbase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="名        称："
            android:textColor="@color/black3_999999" />

        <TextView
            style="@style/textbase"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:hint="名称为空" />

    </LinearLayout>

    <include layout="@layout/line_matchleft10" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/textbase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="订单编码："
            android:textColor="@color/black3_999999" />

        <TextView
            style="@style/textbase"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:hint="名称为空" />

    </LinearLayout>

    <include layout="@layout/line_matchleft10" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/textbase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="使用时间："
            android:textColor="@color/black3_999999" />

        <TextView
            style="@style/textbase"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:hint="名称为空" />

    </LinearLayout>

    <include layout="@layout/line" />

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/white_F1F1F1" />

    <include layout="@layout/line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/textbase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="实       付："
            android:textColor="@color/black3_999999" />

        <TextView
            style="@style/textbase"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:hint="名称为空" />

    </LinearLayout>

    <include layout="@layout/line_matchleft10" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/textbase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="下单时间："
            android:textColor="@color/black3_999999" />

        <TextView
            style="@style/textbase"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:hint="名称为空" />

    </LinearLayout>

    <include layout="@layout/line" />

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/white_F1F1F1" />

    <include layout="@layout/line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/textbase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="评分"
            android:textColor="@color/black3_999999" />

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:numStars="5"
            android:rating="5" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="5.0分"/>

    </LinearLayout>

    <include layout="@layout/line_matchleft10" />




</LinearLayout>