<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- title -->
    <RelativeLayout
        android:id="@+id/youhui_title"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/blue_24B9EB">

        <ImageView
            android:id="@+id/youfei_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:paddingEnd="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingStart="10dp"
            app:srcCompat="@drawable/back_white" />
        <!--title tab -->
        <RadioGroup
            android:id="@+id/youhuimanager_RadioGroup"
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:background="@drawable/shape_corner_white"
            android:orientation="horizontal"
            android:padding="1dp">

            <RadioButton
                android:id="@+id/youhuimanager_showing"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/youhuimanager_title_showing"
                android:button="@null"
                android:gravity="center"
                android:text="展示中"
                android:textColor="@color/youhuimanager_title_textcolor"
                android:textSize="12sp" />

            <RadioButton
                android:id="@+id/youhuimanager_xiajia"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginStart="1dp"
                android:layout_weight="1"
                android:background="@drawable/youhuimanager_title_xiajia"
                android:button="@null"
                android:gravity="center"
                android:text="已下架"
                android:textColor="@color/youhuimanager_title_textcolor"
                android:textSize="12sp" />

            <RadioButton
                android:id="@+id/youhuimanager_kind"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/youhuimanager_title_kind"
                android:button="@null"
                android:gravity="center"
                android:text="分类"
                android:textColor="@color/youhuimanager_title_textcolor"
                android:textSize="12sp" />
        </RadioGroup>

        <TextView
            android:id="@+id/youfei_add"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingEnd="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingStart="10dp"
            android:text="添加"
            android:gravity="center"
            style="@style/textbase"
            android:textColor="@color/white"
            android:tint="@android:color/white"
            app:srcCompat="@drawable/icon_2_seach" />

    </RelativeLayout>

    <FrameLayout
        android:layout_below="@+id/youhui_title"
        android:id="@+id/titletab_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>
