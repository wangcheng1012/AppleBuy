<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.dw.applebuy.ui.songjifen.InputPhoneActivity">

    <fragment
        android:id="@+id/inputphone_titlefragment"
        class="com.dw.applebuy.ui.Title2Fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout="@layout/fragment_title2" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="35dp"
        android:text="输入手机号码"
        android:textColor="@color/black2_666666"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/inputphone_phone"
        style="@style/textbase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:digits="0123456789"
        android:gravity="center"
        android:textColorHint="@color/black4_cccccc"
        android:hint="请输入手机号"
        android:inputType="number"
        android:textSize="20sp" />

    <View
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/black4_cccccc"  />


    <Button
        android:id="@+id/inputphone_verify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_corner"
        android:text="验证"
        android:textColor="@android:color/white"
        android:textSize="20sp" />




</LinearLayout>
