<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/white"
        android:gravity="center"
        android:paddingBottom="2dp"
        android:orientation="vertical">


        <DatePicker
            android:layout_margin="2dp"
            android:id="@+id/datePicker"
            android:calendarViewShown="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/datePicker"
            android:layout_alignRight="@+id/datePicker"
            android:layout_below="@+id/datePicker"
            android:orientation="horizontal">

            <Button
                android:id="@+id/dialog_daychoose_canl"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/black3_999999"
                android:gravity="center"
                android:padding="10dp"
                android:text="取消"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/dialog_daychoose_sure"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@color/blue_24B9EB"
                android:gravity="center"
                android:padding="10dp"
                android:text="确认"
                android:textColor="@color/white" />
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>